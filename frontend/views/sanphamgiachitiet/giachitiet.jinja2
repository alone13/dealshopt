{% extends "shared/layoutadmin.jinja2" %}
{% block body %}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Quản Lý Sản Phẩm - Giá - Chi Tiết
            <button type="button" class="btn btn-blue btn-info" data-toggle="modal" data-target="#myModal" id="btnsua">
                <i class="glyphicon glyphicon-pencil"></i>
            </button>
        </h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div id="myModal" class="modal fade" role="dialog" style="display: none;">
        <div class="modal-dialog modal-lg">
          <form method="post">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">×</button>
                    <h4 class="modal-title">Nghiệp Vụ</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="panel panel-default">
                                <div class="panel-body">
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label for="disabledSelect">IDGiaChiTiet: </label>
                                                <input class="form-control"  type="text" placeholder="IDGiaChiTiet" disabled="">
                                            </div>
                                            <div class="form-group">
                                                <label>IdGia: </label>
                                                <select name="{{ form.fields.sanpham_gia_id.name }}" class="form-control">
                                                {% for item in sanphamgias %}
                                                    <option value="{{item.id}}"> {{ item.id }}</option>
                                                {% endfor %}
                                                </select>
                                            </div>
                                            <div class="form-group">
                                              <label>Giá: </label>
                                              <span class="input-group-addon"><i class="fa fa-dollar"></i></span>
                                                <input type="text" name="{{ form.fields.gia.name }}" class="form-control">
                                              <span class="input-group-addon"><i class="fa fa-ambulance"></i></span>
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                        <div class="form-group">
                                          <label>Ngày BĐ:</label>
                                            <div class="input-group date">
                                              <div class="input-group-addon">
                                                <i class="fa fa-calendar"></i>
                                              </div>
                                              <input type="text" name="{{ form.fields.ngaybd.name }}" class="form-control pull-right" id="datepicker">
                                            </div>
                                            <!-- /.input group -->
                                        </div>
                                        <div class="form-group">
                                          <label>Ngày KT:</label>
                                            <div class="input-group date">
                                              <div class="input-group-addon">
                                                <i class="fa fa-calendar"></i>
                                              </div>
                                              <input type="text"name="{{ form.fields.ngaykt.name }}" class="form-control pull-right" id="datepicker">
                                            </div>
                                            <!-- /.input group -->
                                        </div>
                                            <div class="form-group">
                                                <label>Is_Active: </label>
                                                <select name="{{ form.fields.is_active.name }}" class="form-control">
                                                <option value="1"> True</option>
                                                <option value="2">False</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <button type="submit"  class="btn btn-primary">Lưu Lại</button>
                                            <button type="button" data-dismiss="modal" aria-label="Close" class="btn btn-danger">Hủy Bỏ</button>
                                        </div>
                                    </div>
                                    <!-- /.row (nested) -->
                                </div>
                                <!-- /.panel-body -->
                            </div>
                            <!-- /.panel -->
                        </div>
                        <!-- /.col-lg-12 -->
                    </div>
                </div>
            </div>
          </form>
        </div>
    </div>
<div class="box">
           <div class="box-header">
             <h3 class="box-title">Danh Sách</h3>
           </div>
           <!-- /.box-header -->
           <div class="box-body">
             <table id="example1" class="table table-bordered table-striped">
               <thead>
               <tr>
               <th style="text-align:center;">ID</th>
               <th style="text-align:center;">Sanpham_gia_ID</th>
               <th style="text-align:center;">Giá</th>
               <th style="text-align:center;">Ngày BĐ</th>
               <th style="text-align:center;">Ngày KT</th>
               <th style="text-align:center;">Is_Active</th>
               <th style="text-align:center;">Chức Năng</th>
               </tr>
               </thead>
               <tbody>
               {% for item in sanphamgiachitiets %}
                         <tr class="gradeX odd" id="LuaChon-{{ item.id }}" role="row">
                           <td id="Id-{{ item.id }}" style="text-align:center;" class="sorting_1">{{ item.id }}</td>
                          <td id="SPGID-{{ item.id }}" style="text-align:center;">{{ item.sanpham_gia_id }}</td>
                          <td id="G-{{ item.id }}" style="text-align:center;">{{ item.gia }}</td>
                          <td id="BD-{{ item.id }}" style="text-align:center;">{{ item.ngaybd }}</td>
                          <td id="KT-{{ item.id }}" style="text-align:center;">{{ item.ngaykt }}</td>
                          <td id="TT-{{ item.id }}" style="text-align:center;">{{ item.is_active }}</td>
                           <td style="text-align:center;">
                               <button type="button"  class="btn btn-blue btn-info" data-toggle="modal" data-target="#myModal" id="btnsua">
                                   <i class="glyphicon glyphicon-edit"></i>
                               </button>
                               <button type="button"  class="btn btn-blue btn-info" id="btnxoa">
                                   <i class="glyphicon glyphicon-remove-sign"></i>
                               </button>
                           </td>
                       </tr>
               {% endfor %}
               </tbody>
             </table>
           </div>
           <!-- /.box-body -->
         </div>
</div>
</div>
<!--phần hiển thị body cho từng trang con-->
        </div>
{% endblock %}
