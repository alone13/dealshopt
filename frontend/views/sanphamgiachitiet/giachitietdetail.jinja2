{% extends "shared/layoutadmin.jinja2" %}
{% block body %}
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
      Quản Lý Lựa Giá Chi Tiết
    </h1>
</section>

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <div class="col-sm-2">
                        <button type="button" class="btn btn-block btn-primary btn-sm" data-toggle="modal" data-target="#edit">Edit</button>
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="form-group">
                        <label> SanPhamGiaId</label> : {{ giachitiet.sanpham_id }}
                    </div>
                    <div class="form-group">
                        <label>Giá</label> : {{ giachitiet.ten }}
                    </div>
                    <div class="form-group">
                        <label>Ngày BĐ</label> : {{ giachitiet.ngaybd }}
                    </div>
                    <div class="form-group">
                        <label>Ngày KT</label> : {{ giachitiet.ngaykt }}
                    </div>
                    <div class="form-group">
                        <label>Is_Active</label> : {{ giachitiet.is_active }}
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
    </div>
</section>

<div class="modal" id="edit">
    <div class="modal-dialog">
          <form method="post">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                    <h4 class="modal-title">Edit</h4>
                </div>
                <div class="modal-body">
                    <div class="box-body">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label>SanPham_Gia_Id: </label>
                            <input class="form-control" name="{{ form.fields.sanpham_gia_id.name }}" value="{{ sanphamgia.id }}"  placeholder="SanPham_Giá_Id" required="">
                        </div>
                        <div class="form-group">
                            <label>Giá: </label>
                            <input class="form-control" name="{{ form.fields.gia.name }}" value="{{ sanphamgiachitiet.gia }}" placeholder="Giá" required="">
                        </div>
                    </div>
                    <div class="col-lg-6">
                    <div class="form-group">
                        <label>Ngày BĐ: </label>
                        <input class="form-control" name="{{ form.fields.ngaybd.name }}" value="{{ sanphamgiachitiet.ngaybd }}"  required="">
                    </div>
                    <div class="form-group">
                        <label>Ngày KT: </label>
                        <input class="form-control" name="{{ form.fields.ngaykt.name }}" value="{{ sanphamgiachitiet.ngaykt }}"  required="">
                    </div>
                    <div class="form-group">
                        <label>Is_Active: </label>
                        <input class="form-control" name="{{ form.fields.is_active.name }}" value="{{ sanphamgiachitiet.is_active }}"  required="">
                    </div>
                    </div>
                    </div>
                </div>
                <div class="modal-footer">
                  <button type="submit"  class="btn btn-primary">Lưu Lại</button>
                  <button type="button" data-dismiss="modal" aria-label="Close"  class="btn btn-danger">Hủy Bỏ</button>
                </div>
            </div>
          </form>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
{% endblock %}
