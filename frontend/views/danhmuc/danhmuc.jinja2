{% extends "shared/layoutadmin.jinja2" %}
<link rel="stylesheet" href="{{ STATIC_URL }}admin/bower_components/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.css">
<link rel="stylesheet" href="{{ STATIC_URL }}admin/bower_components/datatables-responsive/css/dataTables.responsive.css">
{% block body %}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Quản Lý Danh Mục
            <button type="button" class="btn btn-blue btn-info" data-toggle="modal" data-target="#myModal" id="btnsua">
                <i class="glyphicon glyphicon-pencil"></i>
            </button>
        </h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div id="myModal" class="modal fade" role="dialog" style="display: none;">
        <div class="modal-dialog modal-lg">
          <form method="post">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">×</button>
                    <h4 class="modal-title">Nghiệp Vụ</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="panel panel-default">
                                <div class="panel-body">
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label for="disabledSelect">IDDanhMuc: </label>
                                                <input class="form-control" id="txtiddm" type="text" placeholder="IDDanhMuc" disabled="">
                                            </div>
                                            <div class="form-group">
                                                <label>Danh Mục Cha: </label>
                                                <select id="cbdanhmuc" name="{{ form.fields.danhmuccha.name }}" class="form-control">
                                                  {% for item in danhmucs %}
                                                      <option value="{{item.tendanhmuc}}"> {{ item.tendanhmuc }}</option>
                                                  {% endfor %}
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <label>Tên Danh Mục: </label>
                                                <input class="form-control" name="{{ form.fields.tendanhmuc.name }}" id="txttendm" placeholder="Tên Danh Mục" required="">
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label>Link: </label>
                                                <input class="form-control" name="{{ form.fields.link.name }}"  id="txtlink" placeholder="Link" required="">
                                            </div>
                                            <div class="form-group">
                                                <label>Trạng Thái: </label>
                                                  <select name="{{ form.fields.trangthai.name }}"  class="form-control">
                                                    <option>true</option>
                                                    <option>false</option>
                                                  </select>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <button type="submit"  class="btn btn-primary">Lưu Lại</button>
                                            <button type="button" data-dismiss="modal" aria-label="Close"  class="btn btn-danger">Hủy Bỏ</button>
                                        </div>
                                    </div>
                                    <!-- /.row (nested) -->
                                </div>
                                <!-- /.panel-body -->
                            </div>
                            <!-- /.panel -->
                        </div>
                        <!-- /.col-lg-12 -->
                    </div>
                </div>
            </div>
          </form>
        </div>
    </div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh Sách
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr role="row">
                        <th style="text-align: center; width: 89px;">IDDanhMuc</th>
                        <th style="text-align: center; width: 110px;">Danh Mục Cha</th>
                        <th style="text-align: center; width: 204px;">Tên Danh Muc</th>
                        <th style="text-align: center; width: 56px;">Link</th>
                        <th style="text-align: center; width: 76px;">Trang Thái</th>
                        <th style="text-align: center; width: 88px;">Chức Năng</th>
                        </tr>
                    </thead>
                        <tbody>
                        {% for item in danhmucs %}
                                  <tr class="gradeX odd" id="DanhMuc-1" role="row">
                                    <td id="Id-1" style="text-align:center;" class="sorting_1">{{ item.id }}</td>
                                    <td id="DMC-1" style="text-align:center;">{{ item.danhmuccha }}</td>
                                    <td id="TDM-1" style="text-align:center;">{{ item.tendanhmuc }}</td>
                                    <td id="MS-1 " class=" hidden">255, 79, 79</td>
                                    <td class="center" id="URL-1" style="text-align:center;">{{ item.link }}</td>
                                    <td id="TDM-1" style="text-align:center;">{{ item.trangthai }}</td>
                                    <td style="text-align:center;">
                                        <a href="/quanlydanhmuc/{{ item.id }}/">
                                        <button type="button"  class="btn btn-blue btn-info" id="btnsua">
                                            <i class="glyphicon glyphicon-edit"></i>
                                        </button>
                                        </a>
                                        <button type="button"  class="btn btn-blue btn-info" id="btnxoa">
                                            <i class="glyphicon glyphicon-remove-sign"></i>
                                        </button>
                                    </td>
                                </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
<!--phần hiển thị body cho từng trang con-->
        </div>
{% endblock %}
