{% extends "shared/layoutadmin.jinja2" %}
{% block body %}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Quản Lý Khách Hàng
            <button type="button" class="btn btn-blue btn-info" data-toggle="modal" data-target="#myModal" id="btnsua">
                <i class="glyphicon glyphicon-pencil"></i>
            </button>
        </h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div id="myModal" class="modal fade" role="dialog" style="display: none;">
        <div class="modal-dialog modal-lg">
          <form method="post">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">×</button>
                    <h4 class="modal-title">Nghiệp Vụ</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="panel panel-default">
                                <div class="panel-body">
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label for="disabledSelect">IDKhachHang: </label>
                                                <input class="form-control" id="txtidkh" type="text" placeholder="IDKhachHang" disabled="">
                                            </div>
                                            <div class="form-group">
                                                <label>Tên Khách Hàng: </label>
                                                <input class="form-control" name="{{ form.fields.tenkhachhang.name }}" type="text" placeholder="Tên Khách Hàng" disabled="">
                                            </div>
                                            <div class="form-group">
                                                <label>Địa Chỉ: </label>
                                                <input class="form-control" name="{{ form.fields.diachi.name }}" placeholder="Địa Chỉ" required="">
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label>Email: </label>
                                                <div class="input-group">
                                                  <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                                                  <input type="email" name="{{ form.fields.email.name }}" class="form-control" placeholder="Email">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label>SĐT: </label>
                                                <input class="form-control" name="{{ form.fields.sdt.name }}" placeholder="Số Điện Thoại" required="">
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <button type="submit"  class="btn btn-primary">Lưu Lại</button>
                                            <button type="button" data-dismiss="modal" aria-label="Close"  class="btn btn-danger">Hủy Bỏ</button>
                                        </div>
                                    </div>
                                    <!-- /.row (nested) -->
                                </div>
                                <!-- /.panel-body -->
                            </div>
                            <!-- /.panel -->
                        </div>
                        <!-- /.col-lg-12 -->
                    </div>
                </div>
            </div>
          </form>
        </div>
    </div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh Sách
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr role="row">
                        <th style="text-align: center; width: 89px;">IDKhachHang</th>
                        <th style="text-align: center; width: 110px;">Tên Khách Hàng</th>
                        <th style="text-align: center; width: 204px;">Địa Chỉ</th>
                        <th style="text-align: center; width: 56px;">Email</th>
                        <th style="text-align: center; width: 76px;">Số Điện Thoại</th>
                        <th style="text-align: center; width: 88px;">Chức Năng</th>
                        </tr>
                    </thead>
                        <tbody>
                        {% for item in khachhangs %}
                                  <tr class="gradeX odd" id="KhachHang-1" role="row">
                                    <td id="Id-1" style="text-align:center;" class="sorting_1">{{ item.id }}</td>
                                    <td id="TKH-1" style="text-align:center;">{{ item.tenkhachhang }}</td>
                                    <td id="DC-1" style="text-align:center;">{{ item.diachi }}</td>
                                    <td id="Email-1" style="text-align:center;">{{ item.email }}</td>
                                    <td id="SDT-1" style="text-align:center;">{{ item.sdt }}</td>
                                    <td style="text-align:center;">
                                        <a href="/quanlykhachhang/{{ item.id }}/">
                                        <button type="button"  class="btn btn-blue btn-info" id="btnsua">
                                            <i class="glyphicon glyphicon-edit"></i>
                                        </button>
                                        </a>
                                        <button type="button"  class="btn btn-blue btn-info" id="btnxoa">
                                            <i class="glyphicon glyphicon-remove-sign"></i>
                                        </button>
                                    </td>
                                </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
<!--phần hiển thị body cho từng trang con-->
        </div>
{% endblock %}
